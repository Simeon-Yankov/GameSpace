@model InviteTeamFormModel

@{
    ViewData["Title"] = "Invite a Member";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Invite a Member</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Nickname"></label>
                <input asp-for="Nickname" class="form-control" placeholder="Enter username">
                <span asp-validation-for="Nickname" class="small text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Invite Member</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}