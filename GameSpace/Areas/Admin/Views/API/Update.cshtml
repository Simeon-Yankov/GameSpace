@using GameSpace.Services.HttpClients.Models 

@model APIServiceModel

@{
    ViewData["Title"] = "Update Riot API";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Update Riot API</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Key"></label>
                <input asp-for="Value" class="form-control" placeholder="Enter key">
                <span asp-validation-for="Value" class="small text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-outline-primary">Update Key</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
